<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Index of photos:</h2>
            <div class="article-list">
                <ul>
                    {{#each}}
                    <li>
                        <h2>{{ name }}</h2>
                        <img {{bind-attr src="path" }} {{bind-attr alt="name" }}>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
