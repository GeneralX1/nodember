<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class=" panel panel-default">
                <div class="panel-heading">
                    Upload photo
                </div>
                <div class="panel-body">
                    <fieldset>
                        <form>
                        	<!-- unused currently -->
                            <div class="form-group">
                                {{input type="text" value=content.name id="name" placeholder="name"}}
                                </input>
                            </div>
							

                            <div class="form-group">
                                {{file-upload url="/photos/upload"}}
                            </div>

							<!-- unused currently -->
                            <div class="form-group">
                                <button class="btn" {{action 'uploadPhoto'}}>Save</button>
                            </div>
                        </form>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
