<section>
	<form class="form-horizontal">
		<div class="control-group">
			<label class="control-label" for="title">Title</label>
		
			<div class="controls">
				{{input type="text" value=content.title id="title" placeholder="Title"}}
				Url Segment {{content.slug}}				
				</input>
			</div>
			
			<div class="controls">
			<span class="question">{{types.question}}</span>
            {{radio-group
	             content=controllers.articles.types.choices
	             value=controllers.articles.answer
	             selection=content.type
	             name=controllers.articles.types.name
             }}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="articleContent">Article Content</label>
			<div class="controls">
				{{textarea id="articleContent" value=content.articleContent cols="30" rows="10" placeholder="Article Content"}}
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button class="btn" {{action 'editArticle'}}>Update</button>
			</div>
		</div>
	</form>
</section>
